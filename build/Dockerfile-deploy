FROM microsoft/dotnet:2.2-sdk-nanoserver-1803 AS build
WORKDIR /src
COPY ./src .
RUN dotnet restore "Kali.WebApi/Kali.WebApi.csproj"
RUN dotnet publish "Kali.WebApi/Kali.WebApi.csproj" -c Release -o /app

